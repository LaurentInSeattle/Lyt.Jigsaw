<UserControl 
	x:Class="Lyt.Jigsaw.Workflow.Collection.CollectionView"
	xmlns:vm="clr-namespace:Lyt.Jigsaw.Workflow.Collection"
	x:DataType="vm:CollectionViewModel" 

	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"

	xmlns:controls="clr-namespace:Lyt.Jigsaw.Controls"
	xmlns:interactions="using:Lyt.Avalonia.Mvvm.Behaviors"
	>
	<Grid
		x:Name="InnerGrid"
		Background="Transparent"
		>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="10" />
			<ColumnDefinition Width="640" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="2" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="1" />
			<RowDefinition Height="*" />
			<RowDefinition Height="1" />
		</Grid.RowDefinitions>
		<Grid
			x:Name="SideBar"
			Grid.Column="1" Grid.Row="1" Grid.RowSpan="1"
			>
			<vm:ThumbnailsPanelView
				DataContext="{Binding ThumbnailsPanelViewModel}"
				/>
		</Grid>
		<Grid
			x:Name="MainArea"
			Grid.Column="2" Grid.Row="1"
			>
			<Grid.RowDefinitions>
				<RowDefinition Height="240" />
				<RowDefinition Height="240" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
			<Grid
				Grid.Column="2" Grid.Row="0"
				>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="20"/>
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>
				<vm:DropView
					DataContext="{Binding DropViewModel}"
					/>
				<Grid
					IsVisible="{Binding ParametersVisible}"
					Grid.Column="2"
					> 
					<Grid.RowDefinitions>
						<RowDefinition Height="80" />
						<RowDefinition Height="80" />
						<RowDefinition Height="80" />
					</Grid.RowDefinitions>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="140"/>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="100" />
					</Grid.ColumnDefinitions>
					<TextBlock
						Grid.Row="0" Grid.Column="0" 
						Margin="4"
						Theme="{StaticResource H3}"
						HorizontalAlignment="Right"
						Text="Piece Count: "
						/>
					<Slider 
						Grid.Row="0" Grid.Column="1" 
						Margin="4 8 4 4 "
						VerticalAlignment="Center" HorizontalAlignment="Stretch"
						TickFrequency="1.0"
						TickPlacement="None"
						IsSnapToTickEnabled="True"
						SmallChange="1" LargeChange="5"
						Minimum="{Binding PieceCountMin}"
						Maximum="{Binding PieceCountMax}"
						Value="{Binding PieceCountSliderValue}"
						/>
					<TextBlock
						Grid.Row="0" Grid.Column="2" 
						Margin="4"
						Theme="{StaticResource H2}"
						HorizontalAlignment="Left"
						Text="{Binding PieceCountString}"
						/>
					<TextBlock
						Grid.Row="1" Grid.Column="0" 
						Margin="4"
						Theme="{StaticResource H3}"
						HorizontalAlignment="Right"
						Text="Rotations: "
						/>
					<Slider 
						Grid.Row="1" Grid.Column="1" 
						Margin="4 8 4 4 "
						VerticalAlignment="Center" HorizontalAlignment="Stretch"
						TickFrequency="1.0"
						TickPlacement="None"
						IsSnapToTickEnabled="True"
						SmallChange="1" LargeChange="1"
						Minimum="1"
						Maximum="6"
						Value="{Binding RotationsSliderValue}"
						/>
					<TextBlock
						Grid.Row="1" Grid.Column="2" 
						Margin="4"
						Theme="{StaticResource H2}"
						HorizontalAlignment="Left"
						Text="{Binding RotationsString}"
						/>
					<TextBlock
						Grid.Row="2" Grid.Column="0" 
						Margin="4"
						Theme="{StaticResource H3}"
						HorizontalAlignment="Right"
						Text="Snap Strength: "
						/>
					<Slider 
						Grid.Row="2" Grid.Column="1" 
						Margin="4 8 4 4 "
						VerticalAlignment="Center" HorizontalAlignment="Stretch"
						TickFrequency="1.0"
						TickPlacement="None"
						IsSnapToTickEnabled="True"
						SmallChange="1" LargeChange="1"
						Minimum="0"
						Maximum="3"
						Value="{Binding SnapSliderValue}"
						/>
					<TextBlock
						Grid.Row="2" Grid.Column="2" 
						Margin="4"
						Theme="{StaticResource H2}"
						HorizontalAlignment="Left"
						Text="{Binding SnapString}"
						/>
				</Grid>
			</Grid>
			<Image
				Grid.Column="2" Grid.Row="2" 
				Margin="8"
				Source="{Binding PuzzleImage}"
				/>
			</Grid>
	</Grid>
</UserControl>
