<UserControl 
	x:Class="Lyt.Jigsaw.Workflow.Game.PuzzleToolbarView"
	xmlns:vm="clr-namespace:Lyt.Jigsaw.Workflow.Game"
	x:DataType="vm:PuzzleToolbarViewModel" 

	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"

	xmlns:glyphs="using:Lyt.Avalonia.Controls.Glyphs"	
	xmlns:controls="clr-namespace:Lyt.Jigsaw.Controls"
	>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="72" />
			<RowDefinition Height="16" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<!-- Background -->
			<ColumnDefinition Width="60" />
			<ColumnDefinition Width="140" />
			<ColumnDefinition Width="60" />
			<!-- Spacer -->
			<ColumnDefinition Width="10" />
			<!-- Buttons -->
			<ColumnDefinition Width="80" />
			<ColumnDefinition Width="80" />
		  <!-- Spacer -->
		  <ColumnDefinition Width="10" />
		  <!-- Progress -->
		  <ColumnDefinition Width="120" />
		  <!-- Spacer -->
		  <ColumnDefinition Width="10" />
		  <!-- Zoom -->
		  <ColumnDefinition Width="280" />
		  <!-- Spacer -->
		  <ColumnDefinition Width="10" />
		  <!-- Fullscreen -->
		  <ColumnDefinition Width="120" />
    </Grid.ColumnDefinitions>

		<TextBlock
			Grid.Row="0" Grid.Column="0" 
			Margin="4"
			Theme="{StaticResource H4}"
			HorizontalAlignment="Right" VerticalAlignment="Center"
			Foreground="{StaticResource PastelOrchid_0_080}"
			Text="Dark"
			/>
		<Slider 
			Grid.Row="0" Grid.Column="1" 
			Margin="4 8 4 4 "
			VerticalAlignment="Center" HorizontalAlignment="Stretch"
			TickFrequency="0.05"
			TickPlacement="None"
			IsSnapToTickEnabled="False"
			SmallChange="0.05" LargeChange="2.0"
			Minimum="0.0"
			Maximum="1.0"
			Value="{Binding BackgroundSliderValue}"
			/>
		<TextBlock
			Grid.Row="0" Grid.Column="2" 
			Margin="4"
			Theme="{StaticResource H4}"
			HorizontalAlignment="Left" VerticalAlignment="Center"
			Foreground="{StaticResource PastelOrchid_0_080}"
			Text="Light"
			/>
		<controls:ExtendedTextBlock
			Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1"
			Text="Background"
			Typography="{StaticResource Medium}"
			Foreground="{StaticResource PastelOrchid_0_080}"
			/>

		<glyphs:GlyphButton
			Grid.Column="4"
			Style="{StaticResource AppToolbarIconButton}"
			Behaviour="Continuous"
			GlyphSource="wallpaper"
			GlyphStrokeThickness="0.1"
			Text="Show Image"
			Command="{Binding OnShowImage}"
			/>
		<glyphs:GlyphButton
			Grid.Column="5"
			Style="{StaticResource AppToolbarIconButton}"
			GlyphSource="lightbulb_filament"
			GlyphStrokeThickness="0.1"
			Text="Hint"
			Command="{Binding OnRandomize}"
			/>
		<controls:ExtendedTextBlock
			Grid.Column="4" Grid.ColumnSpan="2" Grid.Row="1"
			Text=" ¯\_(ツ)_/¯ "
			Typography="{StaticResource Medium}"
			Foreground="{StaticResource PastelOrchid_0_080}"
			/>
    <TextBlock
			Grid.Row="0" Grid.Column="7"
			Margin="4"
			Theme="{StaticResource H1}"
			HorizontalAlignment="Center" VerticalAlignment="Center"      
			Foreground="{StaticResource PastelOrchid_0_080}"
			Text="{Binding Progress}"
			/>
    <controls:ExtendedTextBlock
			Grid.Column="7" Grid.ColumnSpan="1" Grid.Row="1"
			Text="Progress"
			Typography="{StaticResource Medium}"
			Foreground="{StaticResource PastelOrchid_0_080}"
			/>

    <controls:ZoomController
			x:Name="ZoomController"
			Grid.Column="9" Grid.Row="0"
			VerticalAlignment="Center" HorizontalAlignment="Center"
			Min="1.0" Max="2.0"
			/>
    <controls:ExtendedTextBlock
			Grid.Column="9" Grid.ColumnSpan="1" Grid.Row="1"
			Text="Zoom"
			Typography="{StaticResource Medium}"
			Foreground="{StaticResource PastelOrchid_0_080}"
			/>
		<glyphs:GlyphButton
			Grid.Column="11"
			Style="{StaticResource AppToolbarIconButton}"
			GlyphSource="full_screen_maximize"
			GlyphStrokeThickness="0.1"
			Text="Full Screen"
			Command="{Binding OnFullscreen}"
			/>
		<controls:ExtendedTextBlock
			Grid.Column="11" Grid.ColumnSpan="2" Grid.Row="1"
			Text="Esc to Return"
			Typography="{StaticResource Medium}"
			Foreground="{StaticResource PastelOrchid_0_080}"
			/>
  </Grid>
</UserControl>
