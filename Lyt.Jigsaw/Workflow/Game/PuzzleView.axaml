<UserControl
	x:Class="Lyt.Jigsaw.Workflow.Game.PuzzleView"
	xmlns:vm="clr-namespace:Lyt.Jigsaw.Workflow.Game"
	x:DataType="vm:PuzzleViewModel"

	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"

	xmlns:panzoom="using:Lyt.Avalonia.Controls.PanZoom"
	xmlns:drag="using:Lyt.Avalonia.Mvvm.Behaviors.DragMove"
	
	Background="Transparent"
  Focusable="True"
	>
	<Grid
		x:Name="OuterGrid"
		Background="{Binding BackgroundBrush}"
		>
		<panzoom:PanZoomControl
			x:Name="PanAndZoom"
			Grid.Column="1" Grid.Row="1" 
			ZoomFactor="{Binding ZoomFactor}"
			VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
			>
			<panzoom:PanZoomControl.ZoomableContent
				>				
				<drag:DragCanvas
					x:Name="InnerCanvas"
					Background="#A0404040"
					ClipToBounds="False"
					RenderOptions.BitmapInterpolationMode="LowQuality"
					Width="{Binding CanvasWidth}" 
					Height="{Binding CanvasHeight}"
					>
				</drag:DragCanvas>
			</panzoom:PanZoomControl.ZoomableContent>
		</panzoom:PanZoomControl>
		<Image
			Grid.Column="0" Grid.Row="0" 
			Margin="8"
			Source="{Binding PuzzleImage}"
			IsVisible="{Binding PuzzleImageIsVisible}"
			/>

	</Grid>
</UserControl>
